<%- include('partials/header'); -%>

    <form action="newMessage" method="post" autocomplete="off">
        <h1 class="newMsg">
            Compose
        </h1>
        <div class="mb-3">

            <input type="text" required="true" class="form-control" name="username" placeholder="Username">
        </div>
        <div class="mb-3">

            <input type="text" required="true" class="form-control" name="country" placeholder="Country">
        </div>
        <div class="mb-3">

            <textarea class="form-control" required="true" name="message" rows="3"
                placeholder="Write a message..."></textarea>
        </div>
        <button type="submit" class="btn btn-light composeButton">Compose</button>


    </form>

    <%- include('partials/footer'); -%>